         <cluster-connection name="{{ activemq_service_name }}">
         # Needed because by default the playbook adds this connector ref only if it's localhost
            <connector-ref>{% for param in activemq_connectors %}{% if param.name == inventory_hostname %}{{ param.name }}{% endif %}{% endfor %}</connector-ref>
            <message-load-balancing>{{ activemq_cluster_lb_policy }}</message-load-balancing>
            <max-hops>{{ activemq_cluster_maxhops }}</max-hops>
            <static-connectors>
               {% for param in merged_connectors %}{% if param.name != inventory_hostname %}<connector-ref>{{ param.name }}</connector-ref>{% endif %}{% endfor %}
            </static-connectors>
         </cluster-connection>